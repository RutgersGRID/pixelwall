{
  "name": "Pixel Wall",
  "type": "thing",
  "description": "A web connected LED display",
  "properties": {
    "on": {
      "description": "Wether the display is turned on",
      "type": "boolean",
      "href": "/things/pixelwall/properties/on"
    },
    "brightness": {
      "description": "The brightness of the LEDs",
      "type": "number",
      "minimum": 0,
      "maximum": 255,
      "href": "/things/pixelwall/properties/brightness"
    },
    "width": {
      "description": "The width, in number of LEDs, of the display",
      "type": "number",
      "minimum": 1,
      "href": "/things/pixelwall/properties/width"
    },
    "height": {
      "description": "The height, in number of LEDs, of the display",
      "type": "number",
      "minimum": 1,
      "href": "/things/pixelwall/properties/height"
    },
    "colors": {
      "description": "The colors assigned to all the RGB LEDs",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "index": {
            "type": "number",
            "minimum": 0 
          },
          "RColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "GColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "BColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          }
        }
      },
      "href": "/things/pixelwall/properties/colors"
    }
  },
  "actions": {
    "power": {
      "description": "Turn on/off the LED display",
      "input": {
        "type": "boolean"
      },
      "href": "/things/pixelwall/actions/power"
    },
    "brightness": {
      "description": "Set the brightness of the LED display",
      "input": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      },
      "href": "/things/pixelwall/actions/brightness"
    },
    "width": {
      "description": "Set the width of the LED display",
      "input": {
        "type": "number",
        "minimum": 0
      },
      "href": "/things/pixelwall/actions/width"
    }, 
    "height": {
      "description": "Set the height of the LED display",
      "input": {
        "type": "number",
        "minimum": 0
      },
      "href": "/things/pixelwall/actions/height"
    },
    "led": {
      "description": "Set the color of a single LED",
      "input": {
        "type": "object",
        "properties": {
          "index": {
            "type": "number",
            "minimum": 0 
          },
          "RColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "GColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          },
          "BColor": {
            "type": "number",
            "minimum": 0,
            "maximum": 255
          }
        }
      },
      "href": "/things/pixelwall/actions/led"
    }
  }
}
